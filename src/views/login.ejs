<%- include('includes/head') %>
<%- include('includes/nav') %>
  
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-3">
        <h1 class="text-center">Entrar ou Criar conta</h1>
        <p class="text-center lead">Faça login ou crie sua conta </p>

        <%- include('includes/messages'); %>

        <div class="row">

          <div class="col-lg">
            <h4>Faça seu cadastro</h4>
            <p>Se nao pussui nenhuma conta, preencha o formulário abaixo</p>
            <form action="/login/register" method="post" class="formulario">
              <input type="hidden" name="_csrf" value="<%=csrfToken %>">
              <div class="form-group">
                <label> Seu email</label>
                <input type="email" class="form-control" name="email" class="email valid">         
              </div>
              <div class="form-group">
                <label> Sua senha</label>
                <input type="password" class="form-control" name="password" class="senha valid">         
              </div>
      
              <button type="submit" class="btn btn-primary">Criar Minha Conta</button>
            </form>
          </div>

          <div class="col-lg">
            <h4>Entrar no sistema</h4>
            <p>Se pussui uma conta, faça seu login abaixo</p>
            <form action="/login/login" method="post">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">

              <div class="form-group">
                <label> Seu email</label>
                <input type="email" class="form-control" name="email">         
              </div>
              <div class="form-group">
                <label> Sua senha</label>
                <input type="password" class="form-control" name="password">         
              </div>
      
              <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
          </div>



        </div>

      </div>

 
      <div class="col-lg-2"></div>
    </div>
  </div>
  
  <%- include('includes/footer') %>